#!/usr/bin/env perl

use warnings;
use strict;
use feature 'say';

use Getopt::Long;
use Syntax::Check;

my $keep    = 0;
my $verbose = 0;
my $help    = 0;

GetOptions (
    "keep"      => \$keep,
    "verbose"   => \$verbose,
    "help"      => \$help,
);

if (! @ARGV || ! -f $ARGV[0]) {
    die "Program needs a file name as its last argument...";
}

if ($help) {
    say "\nUSAGE: ./syntax_check [-v|--verbose] [-k|--keep] perl_filename.ext\n";
}

Syntax::Check->new(
    file    => $ARGV[0],
    verbose => $verbose,
    keep    => $keep
)->check;

